<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bentaher.youssefbentaher_pset6.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/mailadres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email-adres"/>

        <EditText
            android:inputType="textPassword"
            android:id="@+id/wachtwoord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Wachtwoord"/>

        <EditText
            android:inputType="textPassword"
            android:id="@+id/hwachtwoord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Herhaal Wachtwoord"/>

        <Button
            android:id="@+id/maakaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registreren"/>

        <TextView
            android:id="@+id/inlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ik heb al een account"/>


    </LinearLayout>

</LinearLayout>
